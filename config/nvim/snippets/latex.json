{
  "header": {
    "prefix": "%%",
    "body": [
            "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%",
            "% coding=utf-8                       %",
            "% Andre Anjos <andre.anjos@idiap.ch> %",
            "% $CURRENT_DATE.$CURRENT_MONTH.$CURRENT_YEAR $CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND                %",
            "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%\n\n"
        ],
    "description": "header"
  },
  "Includegraphics": {
    "prefix": "graph",
    "body": "\\includegraphics[width=${1:relwidth}\\linewidth]{${2:name}}",
    "description": "\\includegraphics"
  },
  "Columns": {
    "prefix": "cols",
    "body": [
            "\\begin{columns}",
            "\t\\begin{column}{${1:relwidth}\\linewidth}",
            "\t\\end{column}",
            "\\end{columns}"
        ],
    "description": "\\begin{columns}"
  },
  "Two columns": {
    "prefix": "col2",
    "body": [
            "\\begin{columns}",
            "\t\\begin{column}{0.5\\linewidth}",
            "\t\\end{column}",
            "\t\t${1:contents}",
            "\t\\begin{column}{0.5\\linewidth}",
            "\t\\end{column}",
            "\\end{columns}"
        ],
        "description": "\\begin{columns} x2"
    },
    "Three columns": {
        "prefix": "col3",
        "body": [
            "\\begin{columns}",
            "\t\\begin{column}{0.333\\linewidth}",
            "\t\\end{column}",
            "\t\t${1:contents}",
            "\t\\begin{column}{0.333\\linewidth}",
            "\t\\end{column}",
            "",
            "\t\\begin{column}{0.333\\linewidth}",
            "\t\\end{column}",
            "\\end{columns}"
        ],
        "description": "\\begin{columns} x3"
    },
    "Four columns": {
        "prefix": "col4",
        "body": [
            "\\begin{columns}",
            "\t\\begin{column}{0.25\\linewidth}",
            "\t\\end{column}",
            "\t\t${1:contents}",
            "\t\\begin{column}{0.25\\linewidth}",
            "\t\\end{column}",
            "",
            "\t\\begin{column}{0.25\\linewidth}",
            "\t\\end{column}",
            "",
            "\t\\begin{column}{0.25\\linewidth}",
            "\t\\end{column}",
            "\\end{columns}"
        ],
        "description": "\\begin{columns} x4"
    },
    "displaymath": {
        "prefix": "displaymath",
        "body": [
            "\\begin{displaymath}",
            "\t${1:equation}",
            "\\end{displaymath}"
        ],
        "description": "\\begin{displaymath}"
    },
    "verb": {
        "prefix": "verb",
        "body": "\\verb|${1:contents}|",
        "description": "verb"
    },
    "verbatim": {
        "prefix": "verbatim",
        "body": [
            "\\begin{verbatim}",
            "\t${1:contents}",
            "\\end{verbatim}"
        ],
        "description": "\\begin{verbatim}"
    },
    "Standalone TiKz Picture": {
        "prefix": "standalone",
        "body": [
            "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%",
            "% coding=utf-8                       %",
            "% Andre Anjos <andre.anjos@idiap.ch> %",
            "% $CURRENT_DATE.$CURRENT_MONTH.$CURRENT_YEAR $CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND                %",
            "%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%",
            "",
            "\\documentclass[tikz]{standalone}",
            "",
            "\\begin{document}",
            "\\begin{tikzpicture}[font=\\sffamily]",
            "",
            "${1:contents}",
            "",
            "\\end{tikzpicture}",
            "\\end{document}"
        ],
        "description": "create standalone tikz picture"
    }
}
